					Ellipse:
						pos: self.pos
		BoxLayout:
			padding: 10
			orientation: 'vertical'
			Button:
				text: "Reverse Alphabet (Atbash)"
				valign: 'middle'
				halgin: 'right'
				on_press: 

			Button:
				text: "Caesar"
				valign: 'middle'
			Button:
				text: "Transposition"


